<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/wantslabel"
			android:layout_height="wrap_content"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:text="@string/cellar_wants"
			style="@style/Label" />
		<TextView
			android:id="@+id/haveslabel"
			android:layout_height="wrap_content"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:text="@string/cellar_haves"
			style="@style/Label" />
	</LinearLayout>
	
	<LinearLayout
		android:layout_height="0dip"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:orientation="horizontal">
		<ListView
			android:id="@+id/wantsview"
			android:layout_height="match_parent"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:cacheColorHint="@color/BackgroundLight" />
		<ListView
			android:id="@+id/havesview"
			android:layout_height="match_parent"
			android:layout_width="0dip"
			android:layout_weight="1"
			android:cacheColorHint="@color/BackgroundLight" />
	</LinearLayout>
	
</LinearLayout>
