<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dip">
	
	<TextView 
		android:id="@+id/nowdrinking"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dip"
		android:layout_marginRight="10dip"
		android:textSize="20dip"
		android:text="@string/app_nowdrinking" />
		
	<EditText 
		android:id="@+id/newstatus"
		android:layout_toRightOf="@id/nowdrinking"
		android:layout_alignBaseline="@id/nowdrinking"
		android:inputType="textShortMessage|textCapWords"
		android:layout_height="wrap_content"
		android:layout_width="match_parent" />
		
	<TextView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/newstatus"
		android:layout_marginTop="8dip"
		android:textSize="18dip"
		android:text="@string/app_settingdrinking_expl" />
		
</RelativeLayout>
