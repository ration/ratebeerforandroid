<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true" >
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dip"
			android:orientation="vertical" >
	
			<TextView
				android:id="@+id/name"
				style="@style/DetailsHeadertext"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" />
				
			<TextView
				android:id="@+id/brewername"
				android:layout_below="@id/name"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" />
				
			<LinearLayout
				android:id="@+id/header"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="5dip" >

				<include
					android:id="@+id/scorecard"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					layout="@layout/big_scorecard"
					android:visibility="invisible" />

				<TextView
					android:id="@+id/noscoreyet"
					android:layout_width="150dip"
					android:layout_height="120dip"
					android:background="#333"
					android:gravity="center"
					android:text="@string/details_noscoreyet"
					android:textColor="#fff"
					android:visibility="gone" />

				<FrameLayout
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:paddingLeft="10dip" >
					<ImageView
						android:id="@+id/image"
						android:layout_width="match_parent"
						android:layout_height="150dip"
						android:layout_gravity="center_horizontal"
						android:scaleType="fitCenter" />
				</FrameLayout>
				
			</LinearLayout>

			<Button
				android:id="@+id/abvstyle"
				style="@style/DetailsButton"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawableLeft="@android:drawable/ic_menu_info_details"
				android:visibility="invisible" />

			<TextView
				android:id="@+id/description"
				style="@style/DetailsField"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dip"
				android:autoLink="all" />

			<LinearLayout
				android:id="@+id/buttonsbar"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:visibility="gone" >

				<Button
					android:id="@+id/ratethis"
					style="@style/DetailsButtonSmall"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/app_loading" />

				<Button
					android:id="@+id/drinkingthis"
					style="@style/DetailsButtonSmall"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/details_drinkingthis" />
			</LinearLayout>

			<Button
				android:id="@+id/addavailability"
				style="@style/DetailsButtonSmall"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/addav_addavailability"
				android:visibility="gone" />

			<LinearLayout
				android:id="@+id/buttonsbar2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:visibility="gone" >

				<Button
					android:id="@+id/wantthis"
					style="@style/DetailsButtonSmall"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/cellar_wantthis" />

				<Button
					android:id="@+id/havethis"
					style="@style/DetailsButtonSmall"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/cellar_havethis" />
			</LinearLayout>

			<TextView
				android:id="@+id/ownratinglabel"
				style="@style/Label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/details_myrating"
				android:visibility="gone" />

			<include
				android:id="@+id/ownrating"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				layout="@layout/list_item_rating"
				android:padding="0dip" />
			
		</LinearLayout>
		
	</ScrollView>

</FrameLayout>