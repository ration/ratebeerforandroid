<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dip">
	
	<RelativeLayout
		android:id="@+id/header"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
		<TextView
			android:id="@+id/rating"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="5dip"
			android:visibility="invisible"
			style="@style/ScoreText" />
		<TextView
			android:id="@+id/name"
			style="@style/DetailsHeadertext"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:minHeight="77dip"
			android:layout_toLeftOf="@id/rating" />
		<TextView
			android:id="@+id/type"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginTop="5dip"
			android:layout_marginLeft="5dip"
			android:layout_alignParentRight="true"
			android:layout_below="@id/rating" />
		<Button
			android:id="@+id/address"
			android:drawableLeft="@android:drawable/ic_menu_compass"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_below="@id/name"
			android:visibility="invisible"
			style="@style/DetailsButton" />
		<Button
			android:drawableLeft="@android:drawable/ic_menu_call"
			android:id="@+id/phone"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_below="@id/address"
			android:visibility="invisible"
			style="@style/DetailsButton" />
	</RelativeLayout>

	<FrameLayout
		android:id="@+id/map"
		android:layout_width="fill_parent"
		android:layout_height="150dip"
		android:layout_marginTop="10dip" />

	<TextView
		android:id="@+id/checkinslabel"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/places_checkins"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"
		android:visibility="invisible"
		style="@style/Label" />
	
	<Button
		android:id="@+id/checkinhere"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/places_checkinhere"
		android:visibility="invisible"
		style="@style/DetailsButtonSmall" />
		
</LinearLayout>
